<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Task.
    -->
    <changeSet id="20170210202145-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="node_id"
                                 baseTableName="task"
                                 constraintName="fk_task_node_id"
                                 referencedColumnNames="id"
                                 referencedTableName="node"/>

        <addForeignKeyConstraint baseColumnNames="task_handler_id"
                                 baseTableName="task"
                                 constraintName="fk_task_task_handler_id"
                                 referencedColumnNames="id"
                                 referencedTableName="task_handler"/>

        <addForeignKeyConstraint baseColumnNames="event_handler_id"
                                 baseTableName="task"
                                 constraintName="fk_task_event_handler_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event_handler"/>

    </changeSet>
</databaseChangeLog>
